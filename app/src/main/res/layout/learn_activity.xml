<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/header_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Learn the craft" />

    <TextView
        android:id="@+id/subHeader"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        android:layout_width="match_parent"
        android:textStyle="normal"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#000000"
        android:text="Select the material that you would like to learn about, and click on the video title that relates to your scope of work." />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:weightSum="4"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/subHeader"
        app:layout_constraintBottom_toTopOf="@id/navBar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tile_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TILE"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:background="@drawable/rect_backgrounds"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/hardwood_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="HARDWOOD"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:background="@drawable/hardwood_background"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tile_button"/>

        <TextView
            android:id="@+id/vinyl_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="VINYL"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:background="@drawable/vinyl_background"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/hardwood_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CARPET"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/carpet_background"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/vinyl_button"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/navBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:background="@drawable/navbarbackground"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/homeButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="HOME"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/learnButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LEARN"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/la_qb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="QB"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/la_mq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="MQ"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/la_pb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text="PROFILE"
            android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>