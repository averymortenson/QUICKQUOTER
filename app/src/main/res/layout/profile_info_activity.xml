<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navBar"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_picture"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/profile"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/profile_picture"
        app:layout_constraintTop_toTopOf="@id/profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/profile_picture"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:text="Dave Berkshire"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_username"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:background="@drawable/carpet_background"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:padding="8dp"
        android:text="GENERAL CONTRACTOR"/>

    <TextView
        android:id="@+id/companyNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:text="Company Name:"/>

    <TextView
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companyNameHeader"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rect_backgrounds"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:padding="8dp"
        android:text="Alpental Construction"/>

    <TextView
        android:id="@+id/websiteLinkHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:text="Company Website:"/>

    <TextView
        android:id="@+id/websiteLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/websiteLinkHeader"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rect_backgrounds"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:padding="8dp"
        android:text="www.alpentalconstruction.com"/>

    <TextView
        android:id="@+id/aboutMeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/websiteLink"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:text="About Me:"/>

    <TextView
        android:id="@+id/aboutMeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutMeHeader"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rect_backgrounds"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:padding="8dp"
        android:text="I have been a contractor for 10 years and have done work for numerous customers all over the King County Area. Check the posts under my 'works' section to see my craftsmenship."/>

    <TextView
        android:id="@+id/emailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutMeText"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:text="Email: "/>

    <TextView
        android:id="@+id/emailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailHeader"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rect_backgrounds"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:padding="8dp"
        android:text="DAVEBERKSHIRE@GMAIL.COM"/>

    <TextView
        android:id="@+id/phoneHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:text="Phone: "/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneHeader"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rect_backgrounds"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:padding="8dp"
        android:text="425-780-1543"/>

</androidx.constraintlayout.widget.ConstraintLayout>